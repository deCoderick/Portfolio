                    // Fix for Journey section in light mode
                    if (newTheme === 'light') {
                        // Force immediate visibility for all journey items
                        document.querySelectorAll('.journey-item, .journey-content, .journey-date, .journey-tags, .journey-tag').forEach(item => {
                            item.style.opacity = '1';
                            item.style.visibility = 'visible';
                            item.style.display = item.tagName.toLowerCase() === 'div' ? 'flex' : 'inline-block';
                            item.style.transform = 'none';
                            item.style.transition = 'none';
                        });
                        
                        // Fix journey content colors for light mode
                        document.querySelectorAll('.journey-content').forEach(content => {
                            content.style.background = '#ffffff';
                            content.style.boxShadow = '0 5px 15px rgba(0, 0, 0, 0.05)';
                            content.style.border = '1px solid rgba(0, 0, 0, 0.08)';
                        });
                        
                        document.querySelectorAll('.journey-section h3').forEach(h3 => {
                            h3.style.color = '#3a56e4';
                        });
                        
                        document.querySelectorAll('.journey-section p').forEach(p => {
                            p.style.color = '#555555';
                        });
                        
                        document.querySelectorAll('.journey-tag').forEach(tag => {
                            tag.style.background = 'rgba(58, 86, 228, 0.1)';
                            tag.style.color = '#3a56e4';
                        });
                    }
                });
            }
        });
        
        // Mobile Navigation
        document.addEventListener('DOMContentLoaded', function() {
            const navToggle = document.querySelector('.nav-toggle');
            const navLinks = document.querySelector('.nav-links');
            
            if (navToggle && navLinks) {
                navToggle.addEventListener('click', function() {
                    navLinks.classList.toggle('active');
                });
            }
            
            // Close mobile menu when clicking outside
            document.addEventListener('click', function(event) {
                if (navLinks && navLinks.classList.contains('active')) {
                    if (!event.target.closest('.nav-toggle') && !event.target.closest('.nav-links')) {
                        navLinks.classList.remove('active');
                    }
                }
            });
        });
        
        // Handle scrolling and active navigation items
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('section[id]');
            const navItems = document.querySelectorAll('.nav-item');
            const navigation = document.querySelector('.navigation');
            
            // Highlight active nav item based on scroll position
            function highlightNavItem() {
                const scrollY = window.pageYOffset;
                
                sections.forEach(current => {
                    const sectionHeight = current.offsetHeight;
                    const sectionTop = current.offsetTop - 100;
                    const sectionId = current.getAttribute('id');
                    
                    if (scrollY > sectionTop && scrollY <= sectionTop + sectionHeight) {
                        navItems.forEach(item => {
                            item.classList.remove('active');
                            if (item.getAttribute('href') === `#${sectionId}`) {
                                item.classList.add('active');
                            }
                        });
                    }
                });
                
                // Add scrolled class to navigation when page is scrolled
                if (scrollY > 50) {
                    navigation.classList.add('scrolled');
                } else {
                    navigation.classList.remove('scrolled');
                }
            }
            
            window.addEventListener('scroll', highlightNavItem);
            
            // Call once on page load
            highlightNavItem();
        });
    </script>

    <!-- Space Theme Initialization -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Create additional stars for the space theme
            const heroSection = document.querySelector('.hero-section');
            
            // Create small stars in the background
            for (let i = 0; i < 50; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.width = `${Math.random() * 3 + 1}px`;
                star.style.height = star.style.width;
                star.style.borderRadius = '50%';
                star.style.backgroundColor = '#fff';
                star.style.position = 'absolute';
                star.style.top = `${Math.random() * 100}%`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.opacity = `${Math.random() * 0.7 + 0.3}`;
                star.style.animation = `twinkle ${Math.random() * 5 + 3}s linear infinite`;
                heroSection.appendChild(star);
            }
            
            // Add twinkle animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes twinkle {
                    0%, 100% { opacity: 0.2; }
                    50% { opacity: 1; }
                }
            `;
            document.head.appendChild(style);
            
            // Add orbit effect around profile image
            const heroProfileImage = document.querySelector('.hero-profile-image');
            if (heroProfileImage) {
                const orbitCount = 3;
                for (let i = 0; i < orbitCount; i++) {
                    const orbit = document.createElement('div');
                    orbit.className = 'orbit';
                    orbit.style.position = 'absolute';
                    orbit.style.top = '50%';
                    orbit.style.left = '50%';
                    orbit.style.width = `${260 + (i * 40)}px`;
                    orbit.style.height = `${260 + (i * 40)}px`;
                    orbit.style.transform = 'translate(-50%, -50%)';
                    orbit.style.borderRadius = '50%';
                    orbit.style.border = '1px solid rgba(255, 255, 255, 0.1)';
                    orbit.style.animation = `rotate ${10 + (i * 5)}s linear infinite`;
                    
                    // Add particles on the orbit
                    const particleCount = 1 + i;
                    for (let j = 0; j < particleCount; j++) {
                        const particle = document.createElement('div');
                        particle.className = 'particle';
                        particle.style.position = 'absolute';
                        particle.style.width = '8px';
                        particle.style.height = '8px';
                        particle.style.borderRadius = '50%';
                        particle.style.backgroundColor = i === 0 ? '#ff6b6b' : (i === 1 ? '#536dfe' : '#36d1dc');
                        particle.style.top = '0';
                        particle.style.left = '50%';
                        particle.style.transform = `rotate(${j * (360 / particleCount)}deg) translateX(${orbit.style.width.replace('px', '') / 2}px)`;
                        particle.style.boxShadow = `0 0 10px ${particle.style.backgroundColor}`;
                        orbit.appendChild(particle);
                    }
                    
                    heroProfileImage.appendChild(orbit);
                }
                
                // Add rotate animation
                const rotateStyle = document.createElement('style');
                rotateStyle.textContent = `
                    @keyframes rotate {
                        0% { transform: translate(-50%, -50%) rotate(0deg); }
                        100% { transform: translate(-50%, -50%) rotate(360deg); }
                    }
                `;
                document.head.appendChild(rotateStyle);
            }
        });
    </script>

    <script>
        // Portfolio filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const portfolioTabs = document.querySelectorAll('.portfolio-tab');
            const portfolioItems = document.querySelectorAll('.portfolio-item');
            
            // Add click event to each tab
            portfolioTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active class from all tabs
                    portfolioTabs.forEach(t => t.classList.remove('active'));
                    
                    // Add active class to clicked tab
                    this.classList.add('active');
                    
                    // Get filter value
                    const filterValue = this.getAttribute('data-filter');
                    
                    // Filter items
                    portfolioItems.forEach(item => {
                        if (filterValue === 'all') {
                            item.style.display = 'block';
                            setTimeout(() => {
                                item.style.opacity = '1';
                                item.style.transform = 'translateY(0)';
                            }, 50);
                        } else if (item.getAttribute('data-category') === filterValue) {
                            item.style.display = 'block';
                            setTimeout(() => {
                                item.style.opacity = '1';
                                item.style.transform = 'translateY(0)';
                            }, 50);
                        } else {
                            item.style.opacity = '0';
                            item.style.transform = 'translateY(20px)';
                            setTimeout(() => {
                                item.style.display = 'none';
                            }, 300);
                        }
                    });
                });
            });
            
            // Initialize with animation
            setTimeout(() => {
                portfolioItems.forEach((item, index) => {
                    setTimeout(() => {
                        item.style.opacity = '1';
                        item.style.transform = 'translateY(0)';
                    }, index * 100);
                });
            }, 500);
        });
    </script>

    <!-- Initialize ScrollReveal for animations -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize ScrollReveal
            const sr = ScrollReveal({
                origin: 'bottom',
                distance: '30px',
                duration: 800,
                delay: 300,
                easing: 'cubic-bezier(0.2, 0.8, 0.2, 1)',
                reset: false
            });
            
            // Animate sections and elements
            sr.reveal('.section-title', {
                origin: 'top',
                delay: 100
            });

            // Special handling for light mode journey section
            const isLightMode = document.documentElement.getAttribute('data-theme') === 'light';
            
            // Journey section optimized animations with reduced delay and duration in light mode
            if (isLightMode) {
                // Force immediate reveal for journey items in light mode
                document.querySelectorAll('.journey-item').forEach(item => {
                    item.style.opacity = '1';
                    item.style.visibility = 'visible';
                    item.style.transform = 'translateY(0)';
                });
                
                // Apply faster animations with no delay for timeline elements
                sr.reveal('.journey-timeline::before', {
                    origin: 'top',
                    delay: 0,
                    duration: 600,
                    scale: 1
                });
                
                sr.reveal('.journey-date', {
                    delay: 0,
                    interval: 50,
                    scale: 1
                });
            } else {
                // Normal animation timing for dark mode
                sr.reveal('.journey-timeline::before', {
                    origin: 'top',
                    delay: 200,
                    duration: 1200,
                    scale: 1
                });
                
                sr.reveal('.journey-item:nth-child(odd) .journey-content', {
                    origin: 'left',
                    delay: 300,
                    interval: 200
                });
                
                sr.reveal('.journey-item:nth-child(even) .journey-content', {
                    origin: 'right',
                    delay: 300,
                    interval: 200
                });
                
                sr.reveal('.journey-date', {
                    delay: 500,
                    interval: 200,
                    scale: 0.8
                });
            }
            
            // About, Skills, Portfolio sections
            sr.reveal('.about-content', { delay: 200 });
            sr.reveal('.skills-content', { delay: 200 });
            sr.reveal('.portfolio-tabs', { delay: 200 });
            sr.reveal('.portfolio-item', { delay: 300, interval: 100 });
            sr.reveal('.contact-methods, .contact-form', { delay: 200, interval: 200 });
        });
    </script>
    <!-- Journey section enhancement script -->
    <script src="assets/js/journey-smooth.js" defer></script>
